<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-APTE_USERS" author="artur_hurynovich">
        <createTable tableName="APTE_USERS">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="STATUS" type="TINYINT">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="EMAIL" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="PASSWORD" type="VARCHAR(255)">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-admin-user-to-APTE_USERS" author="artur_hurynovich">
        <insert tableName="APTE_USERS">
            <column name="STATUS" value="1"/>
            <column name="EMAIL" value="admin@gmail.com"/>
            <column name="PASSWORD" value="$2y$12$pk0q7NFqVYgOs9TYjbNS..4keSOLoPb/lIeV4YHPm6PYW16Z9MrWS"/>
        </insert>
    </changeSet>

    <changeSet id="create-table-APTE_ROLES" author="artur_hurynovich">
        <createTable tableName="APTE_ROLES">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="STATUS" type="TINYINT">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="NAME" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-admin-role-to-APTE_ROLES" author="artur_hurynovich">
        <insert tableName="APTE_ROLES">
            <column name="STATUS" value="1"/>
            <column name="NAME" value="ADMIN"/>
        </insert>
    </changeSet>

    <changeSet id="add-user-role-to-APTE_ROLES" author="artur_hurynovich">
        <insert tableName="APTE_ROLES">
            <column name="STATUS" value="1"/>
            <column name="NAME" value="USER"/>
        </insert>
    </changeSet>

    <changeSet id="create-table-APTE_USERS_ROLES" author="artur_hurynovich">
        <createTable tableName="APTE_USERS_ROLES">
            <column name="USER_ID" type="BIGINT"/>
            <column name="ROLE_ID" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="APTE_USERS_ROLES-add-fk-for-users" author="artur_hurynovich">
        <addForeignKeyConstraint baseColumnNames="USER_ID"
                                 baseTableName="APTE_USERS_ROLES"
                                 constraintName="APTE_USERS_ROLES-FK-USER"
                                 onDelete="CASCADE"
                                 referencedColumnNames="ID"
                                 referencedTableName="APTE_USERS"/>
    </changeSet>

    <changeSet id="APTE_USERS_ROLES-add-fk-for-roles" author="artur_hurynovich">
        <addForeignKeyConstraint baseColumnNames="ROLE_ID"
                                 baseTableName="APTE_USERS_ROLES"
                                 constraintName="APTE_USERS_ROLES-FK-ROLE"
                                 onDelete="CASCADE"
                                 referencedColumnNames="ID"
                                 referencedTableName="APTE_ROLES"/>
    </changeSet>

    <changeSet id="add-user-with-admin-role-to-APTE_USERS_ROLES" author="artur_hurynovich">
        <insert tableName="APTE_USERS_ROLES">
            <column name="USER_ID" value="1"/>
            <column name="ROLE_ID" value="1"/>
        </insert>
    </changeSet>

</databaseChangeLog>
